@model IEnumerable<BarneyGo.Models.Day>

@{
    ViewBag.Title = "DisplayDay";    
}
<div class="row">
    <div class="col-md-12" style="text-align: center"><h1>Welcome, @ViewData["userName"]</h1></div>
</div>
<div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4" style="text-align:right"><h3>Today is @ViewBag.today</h3></div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <p class="lead">Next class date/</p>
        <blockquote>
            <p>@ViewBag.currentDay.Date.ToShortDateString()</p>
        </blockquote>
    </div>
    <div class="col-md-6">
        <p class="lead">Location/</p>
        <blockquote>
            <p>@ViewBag.currentDay.Location</p>
        </blockquote>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p class="lead">Wi-Fi/</p>
        <blockquote>
            <p>@ViewBag.currentDay.Wifi</p>
        </blockquote>
    </div>
    <div class="col-md-6">
        <p class="lead">Topics/</p>
        <blockquote>
            <p>@ViewBag.currentDay.Topics</p>
        </blockquote>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p class="lead">Labwork/</p>
        <blockquote>
            <p>@ViewBag.currentDay.Labs</p>
        </blockquote>
    </div>
    <div class="col-md-6">
        <p class="lead">Homework/</p>
        <blockquote>
            <p>@ViewBag.currentDay.NextClass</p>
        </blockquote>
    </div>
</div>

@section scripts
{
<script>
    $(document).ready(function () {
        $(".adminCanSee").hide();
        $(".studentCanSee").show();
    });    
</script>
}